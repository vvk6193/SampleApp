<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/news_item_padding"
    >

    <ImageView
        android:id="@+id/news_image"
        android:layout_width="@dimen/news_image_height"
        android:layout_height="@dimen/news_image_height"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/news_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="5"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_toRightOf="@id/news_image"
        android:layout_marginLeft="@dimen/marginNewTime"/>

    <TextView
        android:id="@+id/news_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_toRightOf="@id/news_image"
        android:layout_below="@id/news_headline"
        android:layout_marginLeft="@dimen/marginNewTime"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
